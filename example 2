    while(sayi != tahmin)
      {
        if(tahmin < 0 || tahmin > 101)    
        { 
    System.out.println("YanlÄ±s girdin ,     tekrar dene");
  }
  else if (tahmin < sayi)
  {
  System.out.println(" Kucuk girdin , buyuk gir");
  }
else
     {
        System.out.println(" Buyuk girdin , kucuk gir");
     }
 tahmin = input.nextInt();
 }
System.out.println("Kazandin!!"); 
        
    } 
  }
